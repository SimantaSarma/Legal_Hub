<% layout("layouts/boilerplate") %>

    <style>
        /* âœ… article_container Styling */
        .article_container {
            max-width: 800px;
            margin: 40px auto;
            padding: 24px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.2);
        }

        /* âœ… Title Styling */
        h1 {
            font-size: 2.4rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
        }

        /* âœ… Metadata Styling (Author and Date) */
        .meta-info {
            font-size: 0.95rem;
            color: #bbb;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 400;
        }

        .meta-info span {
            background-color: rgba(255, 255, 255, 0.05);
            padding: 4px 12px;
            border-radius: 16px;
            color: #ccc;
        }

        /* âœ… Article Content Styling */
        .article-content {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #ddd;
            margin-bottom: 24px;
        }

        /* âœ… Tag Styling */
        .tags {
            margin-top: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .tag {
            background-color: rgba(255, 255, 255, 0.15);
            color: #9c27b0;
            padding: 6px 14px;
            border-radius: 16px;
            font-size: 0.9rem;
            font-weight: 500;
            transition: background-color 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
        }

        .tag:hover {
            background-color: rgba(255, 255, 255, 0.25);
        }

        /* âœ… Link Styling */
        a {
            color: #9c27b0;
            text-decoration: none;
            transition: color 0.3s ease;
            font-weight: 500;
        }

        a:hover {
            color: #b366cc;
            border-bottom-color: #b366cc;
        }

        /* âœ… Responsive Styling */
        @media (max-width: 768px) {
            .article_container {
                padding: 16px;
            }

            h1 {
                font-size: 2rem;
            }

            .article-content {
                font-size: 1rem;
            }

            .meta-info {
                flex-direction: column;
                align-items: flex-start;
                gap: 6px;
            }

            .tag {
                font-size: 0.85rem;
                padding: 4px 10px;
            }
        }
    </style>

    <section class="article_container">
        <!-- âœ… Title -->
        <h1>
            <%= article.title %>
        </h1>

        <!-- âœ… Author and Date -->
        <div class="meta-info">
            <span>ðŸ‘¤ <%= article.author.name %></span>
            <span>ðŸ“… <%= article.createdAt.toDateString() %></span>

            <!-- edit option if req.user is owner of article -->
            <% if (currentUser && currentUser._id.toString()===article.author._id.toString()) { %>
                <a href="/articles/<%= article._id %>/edit"><button class="btn btn-secondary">Edit</button></a>
                <% } %>
        </div>

        <!-- âœ… Article Content -->
        <div class="article-content">
            <%= article.content %>
        </div>

        <!-- âœ… Tags -->
        <div class="tags">
            <% article.tags.forEach(tag=> { %>
                <span class="tag">#<%= tag %></span>
                <% }) %>
        </div>
    </section>