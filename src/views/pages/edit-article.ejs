<% layout("layouts/boilerplate") %>

    <style>
        .article_container {
            max-width: 750px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.1);
            padding: 35px;
            border-radius: 15px;
            backdrop-filter: blur(15px);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        h2 {
            text-align: center;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #fff;
        }

        /* Form Input Fields */
        .form-label {
            font-weight: 600;
            font-size: 15px;
            color: #ddd;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border-radius: 10px;
            border: none;
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-size: 16px;
            margin-bottom: 15px;
            transition: 0.3s ease-in-out;
            box-shadow: inset 4px 4px 8px rgba(0, 0, 0, 0.2), inset -4px -4px 8px rgba(255, 255, 255, 0.1);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.5);
        }

        /* Button Group */
        .button-group {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-top: 15px;
        }
    </style>

    <div class="article_container">
        <h2>Edit Article</h2>

        <form action="/api/articles/<%= article._id %>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= article.title %>" required>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea id="content" name="content" class="form-control" rows="5"
                    required><%= article.content %></textarea>
            </div>

            <div class="mb-3">
                <label for="tags" class="form-label">Tags (comma separated)</label>
                <input type="text" id="tags" name="tags" class="form-control" value="<%= article.tags.join(', ') %>">
            </div>

            <button type="submit" class="btn btn-outline-primary">Update Article</button>
        </form>

        <form action="/api/articles/<%= article._id %>?_method=DELETE" method="POST">
            <div class="button-group">
                <button type="submit" class="btn btn-danger"
                    onclick="return confirm('Are you sure you want to delete this article?');">
                    Delete
                </button>

                <a href="/articles" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>