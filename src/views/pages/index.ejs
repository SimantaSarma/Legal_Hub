    <style>
        /* ‚úÖ FAQ Container */
        .faq-container {
            display: flex;
            justify-content: space-between;
            padding: 50px;
            gap: 40px;
        }

        /* ‚úÖ Left Section */
        .faq-left {
            background: rgba(255, 255, 255, 0.08);
            padding: 30px;
            width: 30%;
            border-radius: 12px;
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease;
        }

        .faq-left h2 {
            font-size: 2rem;
            color: #ffffff;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .faq-left p {
            font-size: 1rem;
            color: #bdbdbd;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .faq-left .contact-info {
            margin-top: 15px;
        }

        .faq-left .contact-info span {
            display: flex;
            align-items: center;
            font-size: 1rem;
            color: #bdbdbd;
            gap: 10px;
        }

        .faq-left .contact-info i {
            color: #9c27b0;
            font-size: 1.4rem;
        }

        .faq-left .contact-info a {
            color: #9c27b0;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .faq-left .contact-info a:hover {
            color: #1e1d1f;
        }

        /* ‚úÖ Right Section */
        .faq-right {
            width: 65%;
        }

        .faq-item {
            background: rgba(255, 255, 255, 0.05);
            padding: 18px;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }

        .faq-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        }

        .faq-item h3 {
            display: flex;
            justify-content: space-between;
            font-size: 1.1rem;
            color: #ffffff;
            margin: 0;
            align-items: center;
        }

        .faq-item h3 i {
            font-size: 1.4rem;
            color: #9c27b0;
            transition: transform 0.3s ease;
        }

        .faq-item.open h3 i {
            transform: rotate(180deg);
        }

        .faq-answer {
            max-height: 0;
            overflow: hidden;
            padding-top: 5px;
            font-size: 1rem;
            color: #dbe3e9;
            line-height: 1.6;
            transition: max-height 0.5s ease;
        }

        .faq-item.open .faq-answer {
            max-height: 300px;
        }

        .faq-answer p {
            font-size: 1rem;
            color: #bdbdbd;
            line-height: 1.6;
            margin-top: 10px;
        }

        /* ‚úÖ Responsive Design */
        @media (max-width: 992px) {
            .faq-container {
                flex-direction: column;
                padding: 30px;
                gap: 20px;
            }

            .faq-left {
                width: 100%;
                padding: 20px;
            }

            .faq-right {
                width: 100%;
            }

            .faq-item h3 {
                font-size: 1.1rem;
            }

            .faq-answer p {
                font-size: 0.95rem;
            }
        }

        @media (max-width: 600px) {
            .faq-left h2 {
                font-size: 1.8rem;
            }

            .faq-item h3 {
                font-size: 1rem;
            }

            .faq-answer p {
                font-size: 0.9rem;
            }
        }
    </style>

